{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "/*": ["./src/*"]
    },
    "types": ["vite/client", "vue", "vuetify"]
  },
  "include": ["types/**/*.d.ts",
    "src/renderer/pages/**/*.ts",
    "src/renderer/pages/**/*.tsx",
    "src/renderer/pages/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
} 